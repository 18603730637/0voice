{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",  // 与launch.json中的preLaunchTask对应
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",  // 生成调试信息
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "编译器: /usr/bin/gcc"
        }
    ]
}
